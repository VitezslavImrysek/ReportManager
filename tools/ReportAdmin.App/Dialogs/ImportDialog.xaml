<Window x:Class="ReportAdmin.App.Dialogs.ImportDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ReportAdmin.App.Dialogs"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance local:ImportDialogViewModel}"
		Title="Import columns from DB view"
		Height="200" Width="820"
		WindowStartupLocation="CenterOwner">
	<Grid Margin="12">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="180"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Connection string:"/>
		<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ConnStringText, UpdateSourceTrigger=PropertyChanged}" />

		<TextBlock Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center" Text="Schema:"/>
		<TextBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" Width="200" HorizontalAlignment="Left"
				 Text="{Binding SchemaText, UpdateSourceTrigger=PropertyChanged}" />

		<TextBlock Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center" Text="View name:"/>
		<TextBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" Width="450" HorizontalAlignment="Left"
				 Text="{Binding ViewText, UpdateSourceTrigger=PropertyChanged}" />

		<TextBlock Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0" Foreground="#666" TextWrapping="Wrap"
				   Text="This reads metadata from sys.views/sys.columns and replaces current columns definition." />

		<StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
			<Button Width="100" Padding="10,4" Content="Cancel" Click="Cancel_Click"/>
			<Button Margin="8,0,0,0" Width="100" Padding="10,4" Content="Import" Click="Ok_Click"/>
		</StackPanel>
	</Grid>
</Window>
